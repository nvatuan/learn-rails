<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".gravatar_change_lbl"), Settings.gravatar.edit_url,
                  target: "_blank", rel: "noopener" %>
    </div>
  </div>
</div>
