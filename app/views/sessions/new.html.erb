<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, t(".email_field_lbl") %>
      <%= f.email_field :email, class: "form-control",
                          required: true, autofocus: true %>

      <%= f.label :password, t(".password_field_lbl") %>
      <%= f.password_field :password, class: "form-control",
                            required: true %>

      <%= f.label :remember_me, class: "checkoux inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_me_lbl" %></span>
      <% end %>

      <%= f.submit t(".title"), class: "btn btn-primary" %>
    <% end %>

    <p>
      <%= t ".content_html", href: link_to(t(".sign_up_now_lbl"),
                                            signup_path) %>
    </p>
  </div>
</div>
